<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".A0_Layout.LayoutWise"
    android:gravity="center"
    android:background="@drawable/img2"

    android:orientation="vertical">


<FrameLayout
    android:layout_width="match_parent"
    android:background="#8B000000"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ic_logo" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <Button
                android:id="@+id/signin_button"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableRight="@drawable/right_arrow"
                android:text="Signin Screen"
                android:gravity="start|center" />

            <Button
                android:id="@+id/signup_button"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableRight="@drawable/right_arrow"
                android:text="Signup Screen"
                android:gravity="start|center" />

            <Button
                android:id="@+id/tab_button"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableRight="@drawable/right_arrow"
                android:text="Tab Menu"
                android:gravity="start|center" />

            <Button
                android:id="@+id/home_button"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableRight="@drawable/right_arrow"
                android:text="Home"
                android:gravity="start|center" />

            <Button
                android:id="@+id/home_cat_button"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableRight="@drawable/right_arrow"
                android:text="Home Category"
                android:gravity="start|center" />

            <Button
                android:id="@+id/res_list_button"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableRight="@drawable/right_arrow"
                android:text="Restaurant List"
                android:gravity="start|center" />

            <Button
                android:id="@+id/res_detail_button"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableRight="@drawable/right_arrow"
                android:text="Restaurant Detail View"
                android:gravity="start|center" />

            <Button
                android:id="@+id/book_table_button"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableRight="@drawable/right_arrow"
                android:text="Book Table"
                android:gravity="start|center" />

            <Button
                android:id="@+id/order_his_button"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableRight="@drawable/right_arrow"
                android:text="Order History"
                android:gravity="start|center" />

            <Button
                android:id="@+id/fav_button"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableRight="@drawable/right_arrow"
                android:text="Favorite"
                android:gravity="start|center" />

            <Button
                android:id="@+id/notify_button"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableRight="@drawable/right_arrow"
                android:text="Notification"
                android:gravity="start|center" />

            <Button
                android:id="@+id/profile_button"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableRight="@drawable/right_arrow"
                android:text="Profile"
                android:gravity="start|center" />

            <Button
                android:id="@+id/category_button"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableRight="@drawable/right_arrow"
                android:text="All Category"
                android:gravity="start|center" />

            <Button
                android:id="@+id/review_button"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableRight="@drawable/right_arrow"
                android:text="Review"
                android:gravity="start|center" />

            <Button
                android:id="@+id/payment_button"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableRight="@drawable/right_arrow"
                android:text="Payment Method"
                android:gravity="start|center" />



        </LinearLayout>
    </ScrollView>
    </LinearLayout>
</FrameLayout>

</RelativeLayout>