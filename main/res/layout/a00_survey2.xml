<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".A00_Intro.Survey2"
    android:background="#FFE107">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:background="@drawable/ic_bg_edit">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="490dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="-150dp"
                android:src="@drawable/ic_logo" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="150dp">

                <CheckBox
                    android:id="@+id/prefer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#2B90D9"
                    android:text="早午餐"
                    android:textSize="20sp"/>
                <CheckBox
                    android:id="@+id/prefer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/prefer1"
                    android:buttonTint="#2B90D9"
                    android:text="午餐"
                    android:textSize="20sp"/>
                <CheckBox
                    android:id="@+id/prefer3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/prefer2"
                    android:buttonTint="#2B90D9"
                    android:text="義式料理"
                    android:textSize="20sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="200dp">

                <CheckBox
                    android:id="@+id/prefer4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#2B90D9"
                    android:text="下午茶"
                    android:textSize="20sp"/>
                <CheckBox
                    android:id="@+id/prefer5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/prefer4"
                    android:buttonTint="#2B90D9"
                    android:text="晚餐"
                    android:textSize="20sp"/>
                <CheckBox
                    android:id="@+id/prefer6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/prefer5"
                    android:buttonTint="#2B90D9"
                    android:text="日式料理"
                    android:textSize="20sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="250dp">

                <CheckBox
                    android:id="@+id/prefer7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#2B90D9"
                    android:text="餐酒館"
                    android:textSize="20sp"/>
                <CheckBox
                    android:id="@+id/prefer8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/prefer7"
                    android:buttonTint="#2B90D9"
                    android:text="宵夜"
                    android:textSize="20sp"/>
                <CheckBox
                    android:id="@+id/prefer9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/prefer8"
                    android:buttonTint="#2B90D9"
                    android:text="美式料理"
                    android:textSize="20sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="300dp">

                <CheckBox
                    android:id="@+id/prefer10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#2B90D9"
                    android:text="咖啡廳"
                    android:textSize="20sp"/>
                <CheckBox
                    android:id="@+id/prefer11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/prefer10"
                    android:buttonTint="#2B90D9"
                    android:text="火鍋"
                    android:textSize="20sp"/>
                <CheckBox
                    android:id="@+id/prefer12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/prefer11"
                    android:buttonTint="#2B90D9"
                    android:text="中式料理"
                    android:textSize="20sp"/>
            </RelativeLayout>

            <Button
                android:id="@+id/done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:background="@drawable/ic_bg_enter"
                android:text="done >>" />

        </FrameLayout>

    </FrameLayout>

</RelativeLayout>