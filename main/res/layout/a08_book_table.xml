<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".A08_BookTable.BookTable"
    android:background="#ECECEC"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#FFFFFF">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BOOK A TABLE"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:textColor="#313131"/>

    </RelativeLayout>

    <HorizontalScrollView
        android:layout_below="@+id/relative1"
        android:id="@+id/horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:scrollbars="none"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S"
                    android:textColor="#000"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/date1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_round_nocolor"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:textSize="14sp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="40dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M"
                    android:textColor="#000"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/date2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13"
                    android:gravity="center"
                    android:background="@drawable/ic_round_nocolor"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:textSize="14sp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="40dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T"
                    android:textColor="#000"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/date3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_round_nocolor"
                    android:textSize="14sp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="40dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="W"
                    android:textColor="#000"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/date4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_round_nocolor"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:textSize="14sp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="40dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T"
                    android:textColor="#000"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/date5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16"
                    android:gravity="center"
                    android:background="@drawable/ic_round_nocolor"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:textSize="14sp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="40dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="F"
                    android:textColor="#000"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/date6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17"
                    android:background="@drawable/ic_round_nocolor"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="14sp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="40dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S"
                    android:textColor="#000"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/date7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18"
                    android:background="@drawable/ic_round_nocolor"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="14sp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="40dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S"
                    android:textColor="#000"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/date8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_round_nocolor"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:textSize="14sp"/>


            </LinearLayout>


        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_below="@+id/horizontal"
        android:id="@+id/horizontal2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/time1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="10 : 00"
                android:background="@android:color/transparent"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/time2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="10 : 15"
                android:background="@android:color/transparent"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/time3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="10 : 30"
                android:background="@android:color/transparent"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/time4"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="10 : 45"
                android:background="@android:color/transparent"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/time5"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="11 : 00"
                android:background="@android:color/transparent"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"/>

        </LinearLayout>
    </HorizontalScrollView>


    <LinearLayout
        android:id="@+id/linear"
        android:layout_below="@+id/horizontal2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:text="ORDERING"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#919191"/>
    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/linear"
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/noperson"
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:text="Number of person"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#919191"/>

            <TextView
                android:id="@+id/children"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Children"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:textColor="#4B4B4B"
                android:layout_centerInParent="true"/>

            <org.angmarch.views.NiceSpinner
                android:id="@+id/spinner_children"
                android:layout_toLeftOf="@+id/children"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/adult"
                android:layout_toLeftOf="@+id/spinner_children"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adults,"
                android:layout_marginRight="15dp"
                android:textColor="#4B4B4B"
                android:layout_centerInParent="true"/>

            <org.angmarch.views.NiceSpinner
                android:id="@+id/spinner_adult"
                android:layout_toLeftOf="@+id/adult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear3"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_below="@+id/linear2"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:text="MENU"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#919191"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4"
        android:layout_below="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_above="@+id/viewmore1"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/mylist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#ECECEC"
            android:dividerHeight="1dp"
            >
        </ListView>
    </LinearLayout>

    <TextView
        android:id="@+id/viewmore1"
        android:layout_above="@+id/ordernow"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FFFFFF"
        android:layout_marginTop="2dp"
        android:text="View More"/>

    <RelativeLayout
        android:id="@+id/ordernow"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:background="#F4C900" >

        <TextView
            android:id="@+id/total"
            android:gravity="center|left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:textColor="#292929"
            android:textStyle="bold"
            android:text="Total  $ 312.00 "/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="ORDER"
            android:textColor="#292929"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/right_arrow"/>

    </RelativeLayout>


</RelativeLayout>