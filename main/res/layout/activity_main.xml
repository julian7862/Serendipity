<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:background="@color/yellow"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_logo" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/intro_button"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:drawableRight="@drawable/right_arrow"
                        android:background="#fffcf0"
                        android:text="   Intro Screen"
                        android:gravity="start|center" />

                    <Button
                        android:id="@+id/signin_button"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="5dp"
                        android:drawableRight="@drawable/right_arrow"
                        android:background="#fffcf0"
                        android:text="   Signin Screen"
                        android:gravity="start|center" />

                    <Button
                        android:id="@+id/signup_button"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="5dp"
                        android:drawableRight="@drawable/right_arrow"
                        android:background="#fffcf0"
                        android:text="   Signup Screen"
                        android:gravity="start|center" />

                    <Button
                        android:id="@+id/survey_button"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="5dp"
                        android:drawableRight="@drawable/right_arrow"
                        android:background="#fffcf0"
                        android:text="   Survey Screen"
                        android:gravity="start|center" />

                    <Button
                        android:id="@+id/tab_button"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="5dp"
                        android:drawableRight="@drawable/right_arrow"
                        android:background="#fffcf0"
                        android:text="   Tab Menu"
                        android:gravity="start|center" />

                    <!--            <Button-->
                    <!--                android:id="@+id/home_button"-->
                    <!--                android:layout_width="match_parent"-->
                    <!--                android:layout_height="55dp"-->
                    <!--                android:drawableRight="@drawable/right_arrow"-->
                    <!--                android:text="Home"-->
                    <!--                android:gravity="start|center" />-->

                    <!--            <Button-->
                    <!--                android:id="@+id/res_list_button"-->
                    <!--                android:layout_width="match_parent"-->
                    <!--                android:layout_height="55dp"-->
                    <!--                android:drawableRight="@drawable/right_arrow"-->
                    <!--                android:text="Restaurant List"-->
                    <!--                android:gravity="start|center" />-->

                    <!--            <Button-->
                    <!--                android:id="@+id/res_detail_button"-->
                    <!--                android:layout_width="match_parent"-->
                    <!--                android:layout_height="55dp"-->
                    <!--                android:drawableRight="@drawable/right_arrow"-->
                    <!--                android:text="Restaurant Detail View"-->
                    <!--                android:gravity="start|center" />-->

                    <!--            <Button-->
                    <!--                android:id="@+id/fav_button"-->
                    <!--                android:layout_width="match_parent"-->
                    <!--                android:layout_height="55dp"-->
                    <!--                android:drawableRight="@drawable/right_arrow"-->
                    <!--                android:text="Favorite"-->
                    <!--                android:gravity="start|center" />-->

                    <!--            <Button-->
                    <!--                android:id="@+id/notify_button"-->
                    <!--                android:layout_width="match_parent"-->
                    <!--                android:layout_height="55dp"-->
                    <!--                android:drawableRight="@drawable/right_arrow"-->
