<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC">

    <ImageView
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/caffaina"
        android:scaleType="centerCrop"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/gradient">

        <ImageButton
            android:id="@+id/back_arrow"
            android:layout_width="45dp"
            android:layout_marginLeft="10dp"
            android:layout_height="45dp"
            android:foreground="@drawable/ripple"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back_arrow_white"
            android:layout_centerVertical="true"
            android:onClick="Back"/>

        <ImageButton
            android:id="@+id/invite_func"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/go_func"
            android:foreground="@drawable/ripple"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_invite"
            android:onClick="GoInvite"/>

        <ImageButton
            android:id="@+id/go_func"
            android:layout_width="45dp"
            android:layout_marginRight="10dp"
            android:layout_height="45dp"
            android:foreground="@drawable/ripple"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_go"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:onClick="GoFinish"/>

    </RelativeLayout>

    </FrameLayout>

<LinearLayout
    android:id="@+id/linear1"
    android:layout_below="@+id/slider"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/title_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caffaina Coffee"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:maxLines="2"
        android:textColor="#202020"/>

    <TextView
        android:id="@+id/subtitle_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.caffaina.com"
        android:textSize="16sp"
        android:maxLines="1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#919191"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <hyogeun.github.com.colorratingbarlib.ColorRatingBar
            android:id="@+id/rating_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style = "?android:attr/ratingBarStyleSmall"
            android:rating="3"
            app:changeable="false"
            app:empty_color="#B4B4B4"
            app:progress_color="#F4C900" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:maxLines="1"
            android:text="243 reviews"
            android:textColor="#919191"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

</LinearLayout>

